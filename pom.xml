			<id>battleskorpion</id>
			<url>https://github.com/battleskorpion</url>
			<roles>
				<role>Project Owner</role>
				<role>Developer</role>
			</roles>
			<timezone>-5</timezone>
		</developer>
		<developer>
			<id>thiccchris</id>
			<name>Chris Cason</name>
			<url>https://github.com/thiccchris</url>
			<roles>
				<role>Developer</role>
			</roles>
			<timezone>-7</timezone>
		</developer>
	</developers>

